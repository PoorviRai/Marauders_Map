<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cherry.maraudersmap">

    <uses-sdk>
            android:minSdkVersion="9"
            android:targetSdkVersion="21" </uses-sdk>
     
        <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/map"
        android:label="Marauders Map"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LoginActivity">
                    android:label="@string/app_name"
                    android:launchMode="singleTop"
                    android:windowSoftInputMode="adjustPan" >
                    <intent-filter>
                        <action android:name="android.intent.action.MAIN" />
                    </intent-filter>
                </activity>

        <activity android:name=".RegisterActivity">
                    android:label="@string/app_name"
                    android:launchMode="singleTop"
                    android:windowSoftInputMode="adjustPan" </activity>

        <activity
            android:name=".Area"
            android:label="@string/title_activity_area"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".GhatActivity" />
        <activity android:name=".Ghatschools" />
        <activity android:name=".Ghatcolleges" />
        <activity android:name=".ThaneActivity" />
        <activity android:name=".Thaneschools" />
        <activity android:name=".Thanecolleges"></activity>
    </application>

</manifest>